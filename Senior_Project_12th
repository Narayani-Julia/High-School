import java.util.Scanner;
class Membership_Discounts
{
boolean Mdis=false;
int op=0;
Scanner can=new Scanner(System.in);
public int display()
{
System.out.println(&quot;Membership amount : 200\n&quot;);
System.out.println(&quot;Discounts :&quot;);
System.out.println(&quot;1.Familly offer : Pay Rs 750 yearly for 10%
discounts, and Reading classes &quot;);
System.out.println(&quot;2.Linguist offer :Pay Rs 300 yearly for 5%
discounts&quot;);
System.out.println(&quot;3.Magnetum offer :Pay Rs 600 yearly for 17.5%
discounts&quot;);
System.out.println(&quot;4.No discount&quot;);
System.out.print(&quot;Enter your choice : &quot;);
op=can.nextInt();
System.out.println();
if(op==1||op==2||op==3)
{
Mdis=true;
}
if(op==1)
{
System.out.println(&quot;Amount to be payed : 750+200&quot;);
System.out.println(&quot;Total Amount : 950&quot;);
}

else if(op==2)
{
System.out.println(&quot;Total amount to be payed : 300+200&quot;);
System.out.println(&quot;Total Amount : 500&quot;);
}
else if(op==3)
{
System.out.println(&quot;Total amount to be payed : 600+200&quot;);
System.out.println(&quot;Total Amount : 800&quot;);
}
return op;
}
public boolean check()
{
return Mdis;
}
public double getDiscount()
{
double discount=0.0;
if(op==1)
{
discount=10;
}
else if(op==2)
{
discount=5;
}
else if(op==3)
{
discount=17.5;
}
return discount;
}
}

import java.util.Scanner;
class CHOOSE

{
Scanner sc=new Scanner(System.in);
int p;
public int Choose()
{
System.out.println(&quot;1.Horror&quot;);
System.out.println(&quot;2.Bios and Live&quot;);
System.out.println(&quot;3.SciFi&quot;);
System.out.println(&quot;4.Adventure&quot;);
System.out.println(&quot;5.Fiction&quot;);
System.out.println(&quot;6.All of the above&quot;);
System.out.println(&quot;7.Exit&quot;);
System.out.print(&quot;Enter Number : &quot;);
p=sc.nextInt();
return p;
}
public int CheckNumber(int a)
{
System.out.print(&quot;Choose a book number : &quot;);
p=sc.nextInt();
if((a==1&amp;&amp;p&gt;=101&amp;&amp;p&lt;=105)||(a==2&amp;&amp;p&gt;=106&amp;&amp;p&lt;=110)||(a==3&amp;&amp;p&gt;=111&amp;
&amp;p&lt;=115)||(a==4&amp;&amp;p&gt;=116 &amp;&amp;
p&lt;=120)||(a==5&amp;&amp;p&gt;=121&amp;&amp;p&lt;=125)||(a==6&amp;&amp;p&gt;=101&amp;&amp;p&lt;=125))
return p;
else
return -1;
}

public int Continue()
{
System.out.println(&quot;\nWould you like to continue? : &quot;);
System.out.println(&quot;1.Yes&quot;);
System.out.println(&quot;2.No&quot;);
System.out.print(&quot;Choose an option : &quot;);
p=sc.nextInt();
return p;
}
}

