class Funct
{
String Horror[] = {&quot;Yamunaji &quot;,&quot;Frank Ocean &quot;,&quot;Rex orange
County&quot;,&quot;Bunnicula &quot;,&quot;The Beginning &quot;};
String Bio_Life[]={&quot;Life of Pi &quot;,&quot;Life of cake &quot;,&quot;Warrior &quot;,&quot;Born a
crime &quot;,&quot;mago attwood &quot;};
String SciFi[] = {&quot;The hoosh hash &quot;,&quot;Black stallion &quot;,&quot;Yamunaji
&quot;,&quot;Samm Henshaw &quot;,&quot;Summer in a day &quot;};
String Adventure[]={&quot;Fast Food &quot;,&quot;Mako &quot;,&quot;Major Lazer
&quot;,&quot;Jukebox,the ghost&quot;,&quot;Steve lacy &quot;};

String Fiction[] ={&quot;Harry Potter &quot;,&quot;Lukas Graham &quot;,&quot;Alex Rider
&quot;,&quot;Time Riders &quot;,&quot;Young Samurai &quot;};
String Hauthor[]= {&quot;Dr. Seusse &quot;,&quot;Hedley &quot;,&quot;Alec Baldwin
&quot;,&quot;H.E.R. &quot;,&quot;KWAYE &quot;};
String BLauthor[]={&quot;Tom Micsh &quot;,&quot;Tiffany Haddish &quot;,&quot;Kevin hart
&quot;,&quot;Trevor noah &quot;,&quot;Sam Smith &quot;};
String SFauthor[]={&quot;Jeremy Zucker &quot;,&quot;Blackbear &quot;,&quot;ODIE
&quot;,&quot;Still woozy &quot;,&quot;Pharrel williams &quot;};
String Aauthor[]= {&quot;Rick Riordian &quot;,&quot;Childish Gambino &quot;,&quot;Donald Glover
&quot;,&quot;FKJ And Masego &quot;,&quot;Lauv &quot;};
String Fauthor[]= {&quot;Frank Ocean &quot;,&quot;Troye sivan &quot;,&quot;Shawn mendes
&quot;,&quot;Logic &quot;,&quot;Tyler creator &quot;};
int Hqty[]={10,10,10,10,10};
int BLqty[]={10,10,10,10,10};
int SFqty[]={10,10,10,10,10};
int Aqty[]={10,10,10,10,10};
int Fqty[]={10,10,10,10,10};
int
BookNumber[]={101,102,103,104,105,106,107,108,109,110,111,112,113,114,
115,116,117,118,119,120,121,122,123,124,125};
double ActualPrice[] =
{300,299,299,200,499,359,659,659,400,300,299,299,2000,499,699,659,400,3
00,299,350,350,200,300,459,449};
String bill[]=new String[250];
double price[]=new double[250];
int qty[]=new int[75];
int no=0;
public void Print(int a)
{
System.out.println(&quot;Book No: Name of Book :\t\t\tAuthor name : \t\tQty:
Price&quot;);
int p=0;
if(a==1||a==6)
{
p=0;
for(int i=0;i&lt;5;i++)
System.out.println(BookNumber[p]+&quot;.
&quot;+Horror[i]+&quot;\t\t&quot;+Hauthor[i]+&quot;\t&quot;+Hqty[i]+&quot;\t&quot;+ActualPrice[p++]);
}
if(a==2||a==6)

{
p=5;
for(int i=0;i&lt;5;i++)
System.out.println(BookNumber[p]+&quot;.
&quot;+Bio_Life[i]+&quot;\t\t&quot;+BLauthor[i]+&quot;\t&quot;+BLqty[i]+&quot;\t&quot;+ActualPrice[p++]);
}
if(a==3||a==6)
{
p=10;
for(int i=0;i&lt;5;i++)
System.out.println(BookNumber[p]+&quot;.
&quot;+SciFi[i]+&quot;\t\t&quot;+SFauthor[i]+&quot;\t&quot;+SFqty[i]+&quot;\t&quot;+ActualPrice[p++]);
}
if(a==4||a==6)
{
p=15;
for(int i=0;i&lt;5;i++)
System.out.println(BookNumber[p]+&quot;.
&quot;+Adventure[i]+&quot;\t\t&quot;+Aauthor[i]+&quot;\t&quot;+Aqty[i]+&quot;\t&quot;+ActualPrice[p++]);
}
if(a==5||a==6)
{
p=20;
for(int i=0;i&lt;5;i++)
System.out.println(BookNumber[p]+&quot;.
&quot;+Fiction[i]+&quot;\t\t&quot;+Fauthor[i]+&quot;\t&quot;+Fqty[i]+&quot;\t&quot;+ActualPrice[p++]);
}
}
public void Sort()
{
System.out.println(&quot;Alphabetical order : &quot;);
double tprice;
int t1;
for(int i=0;i&lt;no;i++)
{
for(int j=0;j&lt;no-i-1;j++)
{
if(bill[i].length()&lt;bill[i+1].length())
{

String temp=bill[i];
bill[i]=bill[i+1];
bill[i+1]=temp;
tprice=price[i+1];
price[i+1]=price[i+2];
price[i+2]=tprice;
t1=qty[i+1];
qty[i+1]=qty[i+2];
qty[i+2]=t1;
}
else if(bill[i].length()==bill[i+1].length())
{
if(bill[i].compareToIgnoreCase(bill[i+1])&gt;0)
{
String temp=bill[i];
bill[i]=bill[i+1];
bill[i+1]=temp;
tprice=price[i+1];
price[i+1]=price[i+2];
price[i+2]=tprice;
t1=qty[i+1];
qty[i+1]=qty[i+2];
qty[i+2]=t1;
}
if(bill[i].compareToIgnoreCase(bill[i+1])==0)
{
qty[i+1]=qty[i+2]+qty[i+1];
t1=i;
for(int k=t1;k&lt;no;k++)
{
bill[k]=bill[k+1];
price[k+1]=price[k+2];
}
no--;
}
}
}
}
System.out.println(&quot;\fSorted books: &quot;);

System.out.println(&quot;Item no: Book bought: \t\t\t\tPrice: \tQty: Total
Price:&quot;);
for(int i=0;i&lt;no;i++)
System.out.println((i+1)+&quot;. &quot;+bill[i]+&quot; \t&quot;+price[i+1]+&quot; \t&quot;+qty[i+1]+&quot;
&quot;+(price[i+1]*qty[i+1]));
}
public void BuyingBook(int a, int t,int n)
{
if(a==1)
{
if((Hqty[t-100]-n)&lt;0)
System.out.println(&quot;\fOnly &quot;+Hqty[t-100]+&quot; books are available&quot;);
else
{
Hqty[t-100]=Hqty[t-100]-n;
bill[no++]=Hauthor[t-100]+&quot; - &quot;+Horror[t-100];
price[no]=ActualPrice[t-100];
qty[no]=n;
}
}
if(a==2)
{
if((BLqty[t-105]-n)&lt;0)
System.out.println(&quot;\fOnly &quot;+BLqty[t-105]+&quot;books are available&quot;);
else
{
BLqty[t-105]=BLqty[t-105]-n;
bill[no++]=BLauthor[t-105]+&quot; - &quot;+Bio_Life[t-105];
price[no]=ActualPrice[t-100];
qty[no]=n;
}
}
if(a==3)
{
if((SFqty[t-110]-n)&lt;0)
System.out.println(&quot;\fOnly &quot;+SFqty[t-110]+&quot;books are available&quot;);

else
{
SFqty[t-110]=SFqty[t-110]-n;
bill[no++]=SFauthor[t-110]+&quot; - &quot;+SciFi[t-110];
price[no]=ActualPrice[t-100];
qty[no]=n;
}
}
if(a==4)
{
if((Aqty[t-115]-n)&lt;0)
System.out.println(&quot;\fOnly &quot;+Aqty[t-115]+&quot;books are available&quot;);
else{
Aqty[t-115]=Aqty[t-115]-n;
bill[no++]=Aauthor[t-115]+&quot; - &quot;+Adventure[t-115];
price[no]=ActualPrice[t-100];
qty[no]=n;
}
}
if(a==5)
{
if((Fqty[t-120]-n)&lt;0)
System.out.println(&quot;\fOnly &quot;+Fqty[t-120]+&quot;books are available&quot;);
else
{
Fqty[t-120]=Fqty[t-120]-n;
bill[no++]=Fauthor[t-120]+&quot; - &quot;+Fiction[t-120];
price[no]=ActualPrice[t-100];
qty[no]=n;
}
}
}
}
